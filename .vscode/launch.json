{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug ANTLR4 grammar",
            "type": "antlr-debug",
            "request": "launch",
            // Archivo con la gramatica
            "grammar": "${file}",
            // Archivo a parsear
            "input": "input/matematica.txt",
            // Simbolo inicial
            //"startRule": "asignacion",
            "startRule": "programa",
            //"startRule": "instruccion",
            // Muestra Arbol Sintactico
            "printParseTree": true,
            "visualParseTree": true
        },
        {
            "type": "java",
            "name": "Current File",
            "request": "launch",
            "mainClass": "${file}"
        },
        {
            "type": "java",
            "name": "App",
            "request": "launch",
            "mainClass": "proyectodhs2024.App",
            "projectName": "proyectodhs2024"
        },
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program":"${file}",
            "console": "integratedTerminal"
        }
    ]
}